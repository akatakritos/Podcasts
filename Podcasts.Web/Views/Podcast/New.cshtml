@using Podcasts.Web.Controllers
@model Podcasts.Core.Entities.Podcast

@{
    ViewBag.Title = "New Podcast";
}

<h2>New Podcast</h2>
@using (Html.BeginForm("Save", "Podcast", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.DownloadUrl)
        @Html.TextBoxFor(m => m.DownloadUrl, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    </div>

    <input type="submit" class="btn btn-primary" value="Add Podcast"/>
}
